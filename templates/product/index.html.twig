{% form_theme form _self %}
{% extends 'base.html.twig' %}
{% block title %}
    {{ product.label }}
{% endblock %}
{% block breadcrumb %}
    <div class="breadcrumb-wrap">
        <div class="container">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ url('default') }}">Home</a></li>
                <li class="breadcrumb-item active">{{ product.label }}</li>
            </ul>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="product-detail">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <div class="row align-items-center product-detail-top">
                        <div class="col-md-5">
                            <div class="product-slider-single">
                                <img src="{{ product.cover }}" alt="Product Image">
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="product-content">
                                <div class="title"><h2>{{ product.label }}</h2></div>
                                <div class="ratting">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                                <div class="price">
                                    ${{ product.unitPrice|number_format(2, ',', ' ') }} {#<span>$25</span>#}</div>
                                <div class="details">
                                    <p>
                                        {{ product.Description }}
                                    </p>
                                </div>
                                {% if product.quantity > 0 %}
                                    {{ form_start(form) }}
                                    {{ form_errors(form) }}
                                    <div class="quantity">
                                        <h4>{% trans %}Quantity:{% endtrans %}</h4>
                                        {{ form_row(form.quantity) }}
                                    </div>
                                    <div class="action">
                                        <button><i class="fa fa-cart-plus"></i></button>
                                        <a href="{{ path('add_wishes', {id:product.id}) }}"><i class="fa fa-heart"></i></a>
                                    </div>
                                    {{ form_end(form) }}
                                {% else %}
                                    <label class="badge badge-danger">Out of store</label>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="row product-detail-bottom">
                        <div class="col-lg-12">
                            <ul class="nav nav-pills nav-justified">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="pill" href="#description">Description</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="pill" href="#specification">Specification</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="pill" href="#reviews">{% trans %} Reviews {% endtrans %} (1)</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div id="description" class="container tab-pane active"><br>
                                    <h4>{% trans %}Product description{% endtrans %}</h4>
                                    <p>
                                        {{ product.description|raw }}
                                    </p>
                                </div>
                                <div id="specification" class="container tab-pane fade"><br>
                                    <h4>{% trans %}Product specification{% endtrans %}</h4>
                                    <ul>
                                        <li>Lorem ipsum dolor sit amet</li>
                                        <li>Lorem ipsum dolor sit amet</li>
                                        <li>Lorem ipsum dolor sit amet</li>
                                        <li>Lorem ipsum dolor sit amet</li>
                                        <li>Lorem ipsum dolor sit amet</li>
                                    </ul>
                                </div>
                                <div id="reviews" class="container tab-pane fade"><br>
                                    <div class="reviews-submitted">
                                        <div class="reviewer">Phasellus Gravida - <span>01 Jan 2020</span></div>
                                        <div class="ratting">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </div>
                                        <p>
                                            Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium
                                            doloremque laudantium, totam rem aperiam.
                                        </p>
                                    </div>
                                    <div class="reviews-submit">
                                        <h4>Give your Review:</h4>
                                        <div class="ratting">
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                        </div>
                                        <div class="row form">
                                            <div class="col-sm-6">
                                                <input type="text" placeholder="Name">
                                            </div>
                                            <div class="col-sm-6">
                                                <input type="email" placeholder="Email">
                                            </div>
                                            <div class="col-sm-12">
                                                <textarea placeholder="Review"></textarea>
                                            </div>
                                            <div class="col-sm-12">
                                                <button>Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="container">
                        <div class="section-header">
                            <h3>{% trans %} Related Products {% endtrans %}</h3>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec viverra at massa sit amet
                                ultricies. Nullam consequat, mauris non interdum cursus
                            </p>
                        </div>
                    </div>

                    <div class="row align-items-center product-slider product-slider-3">
                        {% for product in related %}
                            <div class="col-lg-6 col-md-3">
                                <div class="product-item">
                                    <div class="product-image">
                                        <a href="{{ url('product', {'slug': product.slug}) }}">
                                            <img src="{{ product.cover }}" alt="Product Image" width="255" height="309">
                                        </a>
                                        <div class="product-action">
                                            <a href="#"><i class="fa fa-cart-plus"></i></a>
                                            <a href="#"><i class="fa fa-heart"></i></a>
                                            <a href="#"><i class="fa fa-search"></i></a>
                                        </div>
                                    </div>
                                    <div class="product-content">
                                        <div class="title"><a href="#">
                                                {{ product.label }}
                                            </a></div>
                                        <div class="ratting">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </div>
                                        <div class="price">
                                            ${{ product.unit_price|number_format(2, ',', ' ') }} {#<span>$25</span>#}</div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="sidebar-widget category">
                        <h2 class="title">{% trans %}Category{% endtrans %}</h2>
                        {{ render(controller('App\\Controller\\CategoryController::countByCategory')) }}
                    </div>
                    <div class="sidebar-widget image">
                        <h2 class="title">{% trans %} Featured Product {% endtrans %}</h2>
                        <a href="#">
                            <img src="https://via.placeholder.com/255x270" alt="Image">
                        </a>
                    </div>
                    {{ render(controller('App\\Controller\\DefaultController::brands')) }}
                    <div class="sidebar-widget tag">
                        <h2 class="title">{% trans %}Tags Cloud{% endtrans %}</h2>
                        <a href="#">Lorem ipsum</a>
                        <a href="#">Vivamus</a>
                        <a href="#">Phasellus</a>
                        <a href="#">pulvinar</a>
                        <a href="#">Curabitur</a>
                        <a href="#">Fusce</a>
                        <a href="#">Sem quis</a>
                        <a href="#">Mollis metus</a>
                        <a href="#">Sit amet</a>
                        <a href="#">Vel posuere</a>
                        <a href="#">orci luctus</a>
                        <a href="#">Nam lorem</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    <style type="text/css">
        .product-detail .product-content .action button {
            display: inline-block;
            width: 50px;
            height: 50px;
            padding: 7px 0;
            text-align: center;
            color: #ffffff;
            font-size: 22px;
            background: #3F69AA;
            border: 1px solid #3F69AA;
        }
    </style>
{% endblock %}
{% block _add_to_cart_quantity_row %}
    <div class="qty">
        {{ form_errors(form) }}
        <button class="btn-minus" type="button">
            <i class="fa fa-minus"></i>
        </button>
        {{ form_widget(form, {'attr': {'value': 1}}) }}
        <button class="btn-plus" type="button">
            <i class="fa fa-plus"></i>
        </button>
    </div>
{% endblock %}
{% block _add_to_cart_quantity_errors %}
    {% if errors|length > 0 %}
        <div class="alert alert-danger">
            {% for error in errors %}
                <p>{{ error.message }}</p>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
{% block form_errors %}
    {% if errors|length > 0 %}
        <div class="alert alert-danger">
            {% for error in errors %}
                <p>{{ error.message }}</p>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}